    !function () {
        'use strict';

        // Animate scroll
        function animateScroll() {
            var faq = $('.faq');
            if (faq.length) {
                var question = faq.find('.question a');
                question.each(function () {
                    var oThis = $(this);
                    oThis.on('click', function () {
                        var target = $(oThis.attr('href'));
                        var targetTop = target.offset().top;
                        $('html, body').animate({
                            scrollTop: targetTop
                        }, 500);
                        setTimeout(function () {
                            target.addClass('animate');
                        }, 400);
                        setTimeout(function () {
                            target.removeClass('animate');
                        }, 1400);
                        return false;
