include ../../../base/forms/form_1/form/index
.form-correspondence
  .form-correspondence__inner
    h3.h3.mt-0.form-correspondence__title Откуда
    form#form-correspondence.form-1(name='form_correspondence', method='post', target='_top', action='/')
      fieldset.fieldset
        .row
          .col-12
            // row
            .form-group.form-group--big.control-group
              .text.col-12
                .input-wrap
                  select#form_correspondence_FROM.form-control.form-control--big.ui-select(name='form_correspondence_FROM', required)
                    option(value='', selected, disabled) Тип партнера
                    option Минск
                    option Тип 2
              .controls.col-12
          .col-12
            // row
            .form-group.mb-0
              .col-12.btn-wrap
                +btn-secondary({type: 'button', className: 'btn_submit', text: '<span>Далее</span>'})(id='form-correspondence-submit')
    script.
        !function () {
            'use strict';

            // Form validation
            function initValid() {
                // Validation options http://jqueryvalidation.org/documentation/
                var form_validator = $('#form-correspondence');
                if (form_validator.length && $.fn.validate) {
                    form_validator.validate({
                        rules: {
                            'form_correspondence_FROM': {
                                required: true
                            }
                        }
                    });
                }
            }

            function validOnButton() {
                var form = $('#form-correspondence');
                var btn = $('#form-correspondence-submit');

                btn.on('click', function () {
                    if (form.valid()) {
                        form.submit();
                    }
                })
            }

            $(function () {
                initValid();
                validOnButton();
            });
        }();