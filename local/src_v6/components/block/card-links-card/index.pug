mixin card-links-card(data)
  .card-links-card(class=data.className)
    a.card-links-card__inner(href='#')
      if (data.img)
        .card-links-card__img-wrap
          .card-links-card__img-inner
            img.card-links-card__img(src=DB.DIR + data.img, alt=(data.title || 'alt'))
          .card-links-card__img-inner-hover
            img.card-links-card__img-hover(src=DB.DIR + data.imgHover, alt=(data.title || 'alt'))
      .card-links-card__text-wrap
        if (data.title)
          .card-links-card__title #{data.title}
        if (data.text)
          .card-links-card__text #{data.text}