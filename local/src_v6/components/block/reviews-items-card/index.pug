mixin reviews-items-card(data)
  .reviews-items-card(class=data.className)
    a.reviews-items-card__link(href='#')
    .reviews-items-card__inner
      .reviews-items-card__row.row
        .reviews-items-card__col.reviews-items-card__col--pic
          if (data.img)
            .reviews-items-card__img-wrap
              .reviews-items-card__img-inner
                img.reviews-items-card__img(src=DB.DIR + data.img, alt=(data.title || 'alt'))
        .reviews-items-card__col.reviews-items-card__col--title
          if (data.title)
            .reviews-items-card__title #{data.title}
          if (data.date)
            .reviews-items-card__date #{data.date}
        .reviews-items-card__col.reviews-items-card__col--text
          if (data.text)
            .reviews-items-card__text #{data.text}
        .reviews-items-card__col.reviews-items-card__col--doc
          if (data.doctext)
            a.reviews-items-card__doc(href='#')
              .reviews-items-card__doctext #{data.doctext}