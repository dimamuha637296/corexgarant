include ../../../block/reviews-items-card/index
mixin sl-reviews-items(data)
  .sl-reviews-items(class=data.modifier ? data.modifier : '')
    .wrap.cursor.inited-not
      .slider
        each slide in data.slides
          .slide
            .inner
              +reviews-items-card(slide)
      if (data.nav !== undefined)
        +#{data.nav}()
    if (data.pager !== undefined)
      +#{data.pager}()